#!/bin/sh
#
# ~/.xinitrc
#
# change background
feh --bg-scale /usr/share/backgrounds/background.png
[[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources


##
# X
##

# custom fonts
xset +fp /home/augusto/.local/share/fonts/tewi
xset +fp /home/augusto/.local/share/fonts/tamzen
xset +fp /home/augusto/.local/share/fonts/siji
xset fp rehash
